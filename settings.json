{
    "files.autoSave":"onWindowChange",
    "workbench.editorAssociations": {
        "*.html": "default"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": false
    },
    "liveServer.settings.donotShowInfoMsg": true,
    "git.enableSmartCommit": true,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    "html.hover.references": true,
    "editor.suggest.showReferences": true,
    "editor.gotoLocation.multipleReferences": "peek",
    "editor.gotoLocation.alternativeReferenceCommand": "",
    "references.preferredLocation": "peek",
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": true,
    "tabnine.experimentalAutoImports": true,
    "workbench.colorTheme": "Dobri Next -C04- Material",
    // "workbench.preferredLightColorTheme": "Default Dark+",
    "debug.showBreakpointsInOverviewRuler": false,
    "workbench.colorCustomizations": {
        // Color del Borde de la Ventana, visible cuando no está maximizada.
        // "window.activeBorder": "#ff0000",
        // "window.inactiveBorder": "#ff0000",
        "activityBar.background": "#0D1011", // Color de la Barra de Actividades, donde se seleccionan las carpetas y Extensiones de VSCode
        "[Dobri Next -C04- Material]": {
            "titleBar.inactiveBackground": "#060526",
            // "banner.background": "#ff0000",
            // "banner.foreground": "#ff0000",
            // "banner.iconForeground": "#ff0000",
            // "titleBar.activeBackground": "#ff0000",
            // "titleBar.activeForeground": "#ff0000",
            // "titleBar.border": "#ff0000",
            "titleBar.inactiveForeground": "#666" // Color del texto de la barra de título al no estar activa la ventana.
        },
        // "activityBar.border": "#EBEBEB",
        "sideBar.background": "#0D1011",
        // "sideBar.border": "#EBEBEB",
        // "sideBarSectionHeader.background": "#26597b",
        // "sideBarTitle.foreground": "#EBEBEB",
        // "tab.border": "#26597b",
        // "scrollbarSlider.activeBackground": "#F0F0F0",
        // "scrollbarSlider.background": "#007ACC",
        // "scrollbarSlider.hoverBackground": "#007ACC",
        // "scrollbar.shadow": "#007ACC",
        "tab.activeForeground": "#ff0000",
        "tab.inactiveForeground": "#FFFF00",
        "tab.activeBackground": "#000", // color de la pestaña activa.
        "tab.inactiveBackground": "#080815",
        "tab.activeBorder": "#f00", // color de borde inferior en la pestaña activa.
        // "tab.border": "#00776b",
        "tab.hoverBackground": "#00776b" // color de pestaña al pasar el mouse encima.
    },
    "window.autoDetectHighContrast": false,
    "window.closeWhenEmpty": true,
    "window.openWithoutArgumentsInNewWindow": "on",
    "window.dialogStyle": "custom",
    "window.newWindowDimensions": "offset",
    // Alternar estilo de colores de la ventana de Visual Studio entre clásico o personalizado
    "window.titleBarStyle": "custom",
    "window.titleSeparator": " | ",
    // Visibilidad de la Barra de Menú
    "window.menuBarVisibility": "compact",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${appName}",
    "window.doubleClickIconToClose": false,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.enablePreview": true,
    "workbench.iconTheme": "material-icon-theme",
    "editor.linkedEditing": true,
    // Modificar el texto y la sintaxis del editor:
    // 1. Hacer Ctrl+Shift+P
    // 2. Developer: Inspect Editor Tokens and Scopes
    // 3. Llevar el cursor hasta el tipo de texto que se pretende identificar para cambiar su color 
    // 4. Seleccionar el "textmate scopes" en el menú que se despliega, correspondiente al tipo de código que se pretende modificar su color.
    // 5. Copiar y pegar el valor de "textmate scopes" en el scope del siguiente código.
    // 	variable.other.object.js
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "keyword.mysql",
                    "keyword.other.DML.sql",
                    "keyword.other.DDL.create.II.sql",
                    "keyword.other.sql",
                    "keyword.control.conditional.js",
                    "keyword.control.flow.js",
                    "storage.type.function.arrow.js",
                    "storage.type.js",
                    "entity.name.tag"
                ],
                "settings": {
                    "foreground": "#00F",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "comment"
                ],
                "settings": {
                    "foreground": "#959595"
                }
            },
            {
                "scope": [
                    "text.html.derivative",
                    "string.quoted.single.js",
                    "invalid.illegal.character-not-allowed-here.html"
                ],
                "settings": {
                    "foreground": "#FF0000"
                }
            },
            {
                "scope": [
                    "string.quoted.double.js"
                ],
                "settings": {
                    "foreground": "#C00000"
                }
            },
            {
                "scope": [
                    "source.sql",
                    "support.function.js",
                    "meta.function-call.js",
                    "variable.parameter.js",
                    "variable.other.object.js",
                    "support.type.object.module.js",
                    "string.quoted.double.html"
                ],
                "settings": {
                    "foreground": "#0F0"
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name",
                    "support.function.table.sql",
                    "constant.other.table-name.sql",
                    "entity.name.function.js",
                    "meta.var.expr.js",
                    "variable.other.property.js"
                ],
                "settings": {
                    "foreground": "#00DDff"
                }
            },
            {
                "scope": [
                    "constant.other.database-name.sql",
                    "meta.object-literal.key.js",
                    "variable.other.readwrite.js",
                    "variable.other.constant.js"
                ],
                "settings": {
                    "foreground": "#00DDff",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "meta.object-literal.key.js",
                    "heading.5.markdown"
                ],
                "settings": {
                    "foreground": "#569CD6"
                }
            },
            {
                "scope": [
                    "punctuation.definition.heading.markdown"
                ],
                "settings": {
                    "foreground": "#A00"
                }
            },
            {
                "scope": [
                    "markup.heading.markdown"
                ],
                "settings": {
                    "foreground": "#FF0"
                }
            },
            {
                "scope": [
                    "heading.4.markdown",
                    "string.quoted.double.sql"
                ],
                "settings": {
                    "foreground": "#D0D00D",
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "comment.line.double-dash.sql"
                ],
                "settings": {
                    "foreground": "#D0D00D",
                    "fontStyle": "bold underline"
                }
            },
            {
                "scope": [
                    "comment.block.handlebars"
                ],
                "settings": {
                    "foreground": "#959595"
                }
            }
        ]
    },
    "editor.cursorStyle": "line",
    "editor.dragAndDrop": true,
    "editor.find.cursorMoveOnType": true,
    "editor.formatOnType": true,
    "editor.autoClosingQuotes": "always",
    "editor.autoClosingDelete": "always",
    "editor.autoSurround": "languageDefined",
    "editor.autoClosingOvertype": "always",
    "editor.autoClosingBrackets": "always",
    "editor.trimAutoWhitespace": false, // Cuando presionas enter, haces un nuevo renglón, el editor mantiene la sangría, pero si subes el cursor, estando esta configuración activa, perderás la sangría.
    "editor.find.autoFindInSelection": "multiline",
    "editorconfig.generateAuto": true,
    "editor.peekWidgetDefaultFocus": "editor",
    "workbench.editor.tabCloseButton": "left",
    "editor.multiCursorPaste": "spread",
    "editor.guides.bracketPairs": true,
    "workbench.editor.showTabs": true,
    "workbench.editor.highlightModifiedTabs": true,
    "editor.selectionHighlight": true,
    "editor.colorDecorators": true,
    "editor.smartSelect.selectLeadingAndTrailingWhitespace": true,
    "editor.autoIndent": "advanced",
    "editor.find.seedSearchStringFromSelection": "selection",
    // "editor.columnSelection": true,
    "editor.emptySelectionClipboard": true,
    "editor.tabCompletion": "on",
    "editor.accessibilityPageSize": 10,
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.suggestSelection": "first",
    "editor.wordBasedSuggestionsMode": "matchingDocuments",
    "editor.wordBasedSuggestions": true,
    "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration", // No configurar manualmente?
    "editor.bracketPairColorization.enabled": true,
    "editor.insertSpaces": false,
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[sql]": {
        "editor.defaultFormatter": "cweijan.vscode-database-client2"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "mssql.connections": [
        {
            "server": "{{put-server-name-here}}",
            "database": "{{put-database-name-here}}",
            "user": "{{put-username-here}}",
            "password": "{{put-password-here}}"
        }
    ],
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[handlebars]": {
        "editor.defaultFormatter": "mohd-akram.vscode-html-format"
    },
    "git.autofetch": true,
    "javascript.referencesCodeLens.showOnAllFunctions": true,
    "typescript.referencesCodeLens.showOnAllFunctions": true,
    "diffEditor.codeLens": true,
    "javascript.referencesCodeLens.enabled": true,
    "typescript.implementationsCodeLens.enabled": true,
    "go.enableCodeLens": {
        "references": true
    },
    "liveshare.languages.allowGuestCommandControl": true,
    "typescript.referencesCodeLens.enabled": true, // Mostrar conteo de referencias en cada método.
    "java.implementationsCodeLens.enabled": true,
    "java.referencesCodeLens.enabled": true,
    "xml.codeLens.enabled": true,
    "[html]": {
        "editor.defaultFormatter": "j69.ejs-beautify"
    },
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.CustomBrowser": "microsoft-edge",
    "liveServer.settings.useLocalIp": true,
    "liveServer.settings.host": "127.0.0.1/",
    "window.customMenuBarAltFocus": true,
    "window.autoDetectColorScheme": false,
    "liveshare.connectionMode": "relay",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "window.zoomLevel": -1,
    "redhat.telemetry.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "bracketPairColorizer.depreciation-notice": false
}